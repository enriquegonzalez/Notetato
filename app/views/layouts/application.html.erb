<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Notetato: Tell me about your day" %></title>
    <%= google_webfonts_init({google: ['Lobster','Lobster Two', 'Ultra']}) %>
