      <div class="row">
        <div class="large-9 columns">
          <header>
            <h1 class="title">Notetato</h1>
          </header>
        </div>
        <div class="large-3 columns">
          <%= render 'layouts/user_widget' %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 medium-9 large-9 large-centered columns">
          <%= yield %>
        </div>
      </div>


    </div>
    </div>
    </section>
