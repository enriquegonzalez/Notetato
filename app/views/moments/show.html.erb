<section class="screen screen--show-moment">
  <div class="row">
    <div class="large-12 columns">

    <dl class="sub-nav">
      <% if !@yesterdays_moment.nil? && (@todays_moment == @moment)  %>
        <dt>see:</dt>
        <dd class="active"><a href="#">Yesterdays</a></dd>
      <% elsif !@todays_moment.nil? && (@yesterdays_moment == @moment) %>
        <dt>see:</dt>
        <dd><a href="#">Todays</a></dd>
      <% end %>
    </dl>

      <section class="show-moment__response">
        <header>
          <p class="clearfix">
            <span class="show-moment__date"><%= @moment.date.strftime("%m/%d/%Y") %></span>
            <% if @moment.date == Date.current %>
              <span class="show-moment__menu right">
              <%= link_to 'Edit', edit_moment_path(@moment), class: "button radius tiny show-moment__menu__item" %>
              </span>
            <% end %>
          </p>
        </header>

        <section class="show-moment__questions">
          <p class="show-moment__question">How do you feel?</p>
          <figure class="feeling feeling--<%= mood(@moment.how_do_you_feel) %>">
            <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(@moment.how_do_you_feel) %>.png" alt="Feeling <%= mood(@moment.how_do_you_feel) %>" class="option--feeling__emoticon">
            <figcaption class="option--feeling__emotion">
              <%= mood(@moment.how_do_you_feel) %>
            </figcaption>
          </figure>

          <p class="show-moment__question">What went well today?</p>
          <% if !@moment.what_went_well.blank? %>
            <%= simple_format(cryptor.decrypt(@moment.what_went_well), class: "show-moment__answer") %>
          <% else %>
            <p class="show-moment__answer show-moment__answer--none">No answer.</p>
          <% end %>


          <p class="show-moment__question">What is the one thing you want to work on tomorrow?</p>
          <% if !@moment.focus_on_tomorrow.blank? %>
            <%= simple_format(cryptor.decrypt(@moment.focus_on_tomorrow), class: "show-moment__answer") %>
          <% else %>
            <p class="show-moment__answer show-moment__answer--none">No answer.</p>
          <% end %>


          <p class="show-moment__question">How do you feel now?</p>
          <figure class="feeling feeling--<%= mood(@moment.how_do_you_feel_now) %>">
            <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(@moment.how_do_you_feel_now) %>.png" alt="Feeling <%= mood(@moment.how_do_you_feel_now) %>" class="option--feeling__emoticon">
            <figcaption class="option--feeling__emotion">
              <%= mood(@moment.how_do_you_feel_now) %>
            </figcaption>
          </figure>
        </section>
        <footer>
          <div class="clearfix">
            <%= link_to 'Delete', @moment, method: :delete, data: { confirm: 'Are you sure?' }, class: "button radius show-moment__button--delete" %>
          </div>
        </footer>
      </section>
    </div>
  </div>
</section>
