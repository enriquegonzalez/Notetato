<section class="screen screen--index-moment">
  <div class="row">
    <div class="large-12 columns">

      <!-- TODAY -->
      <% unless @moments_today.blank? %>
        <h2 class="list__title">Today</h2>
        <ul class="list list--moments">
          <li class="list__item">
            <section class="tile tile--daily-moments">
              <div class="row">
                <div class="small-3 large-3 columns">
                  <figure class="feeling feeling--<%= mood(mood_average(Date.current.in_time_zone(@current_user.time_zone))) %>">
                    <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(mood_average(Date.current.in_time_zone(@current_user.time_zone))) %>.png" alt="Feeling <%= mood(mood_average(Date.current.in_time_zone(@current_user.time_zone))) %>" class="mood__emoticon">
                    <figcaption class="mood">
                      <%= mood(mood_average(Date.current.in_time_zone(@current_user.time_zone))) %>
                    </figcaption>
                  </figure>
                </div>

                <div class="small-7 large-6 columns">
                  <div class="row">
                    <div class="large-6 columns">
                      <p class="daily-moments__count">Moments: 3</p>
                    </div>
                    <div class="large-6 columns">
                      <p class="daily-moments__count">Good things: 2</p>
                    </div>
                  </div>
                </div>
                <div class="small-2 large-3 columns">
                  <p class="daily-moments__menu">i c o n </p>
                </div>
              </div>

              <div class="row hide">
                <div class="small-12 columns">
                  <% @moments_today.each do |moment| %>
                    <p>*Feeling with mood*<br><%= truncate(cryptor.decrypt(moment.why), length: 35) %></p>
                    <p>*List of Good things*<br><%= truncate(cryptor.decrypt(moment.what_went_well), length: 35) %></p>
                  <% end %>
                </div>
              </div>
            </section>

          </li>
        </ul>
      <% else %>
        <%= render 'add_moment' %>
      <% end %>

    </div>
  </div>
</section>


