<section class="screen--sign-up">
  <div class="row">
    <div class="small-12 medium-9 large-8 large-centered columns">
      <header class="form--authentication__header">
        <h1 class="title screen__title">Edit <%= resource_name.to_s.humanize %></h1>
      </header>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form--authentication" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, class: "form__label" %>
          <%= f.email_field :email, autofocus: true, class: "form__field" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class: "form__label" %><i>(leave blank if you don't want to change it)</i>
          <% if @validatable %>
            <em>Your password must be at least<%= @minimum_password_length %> characters long</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form__field" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "form__label" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form__field" %>
        </div>

        <div class="actions">
          <%= f.submit "Update Password", class: "button radius form__button" %>
        </div>

      <% end %>

      <div class="cancel">
        <h2 class="form__label">Cancel my account</h2>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button radius form__button"%>
      </div>
    </div>
  </div>
</section>
