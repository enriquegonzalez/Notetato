<section class="screen--change-password">
  <div class="row">
    <div class="small-12 medium-9 large-8 large-centered columns">
      <header class="form--authentication__header">
        <h1 class="title title--screen">Forgot your password?</h1>
      </header>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form--authentication", method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, class: "form__label" %>
          <%= f.email_field :email, autofocus: true, class: "form__field" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset instructions", class: "button radius form__button" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
