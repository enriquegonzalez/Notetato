<section class="screen screen--index-entry">
  <div class="row">
  <% if @yesterdays_entry.exists? %>
    <div class=" large-6 columns">
      <section class="index-entry index-entry--yesterday">
        <header>
          <h1 class="title index-entry__title">Yesterday</h1>
        </header>
        <p class="index-entry__excerpt"><%= truncate(@yesterdays_entry.last.what_went_well, length: 65) %></p>
        <div class="index-entry__mood-shift">
          <figure class="feeling feeling--<%= mood(@yesterdays_entry.last.how_do_you_feel) %>">
            <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(@yesterdays_entry.last.how_do_you_feel) %>.png" alt="Feeling <%= mood(@yesterdays_entry.last.how_do_you_feel) %>" class="mood__emoticon">
            <figcaption class="mood"><%= mood(@yesterdays_entry.last.how_do_you_feel) %></figcaption>
          </figure>
          <span class="index-entry__mood-shift__arrow--right">&#10157;</span>
          <figure class="feeling feeling--<%= mood(@yesterdays_entry.last.how_do_you_feel_now) %>">
            <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(@yesterdays_entry.last.how_do_you_feel_now) %>.png" alt="Feeling <%= mood(@yesterdays_entry.last.how_do_you_feel_now) %>" class="mood__emoticon">
            <figcaption class="mood"><%= mood(@yesterdays_entry.last.how_do_you_feel_now) %></figcaption>
          </figure>
        </div>
      </section>
    </div>
    <% end %>

    <% if @todays_entry.exists? %>
      <div class=" large-6 columns">
        <section class="index-entry index-entry--today">
          <header>
            <h1 class="title index-entry__title">Today</h1>
          </header>
          <p class="index-entry__excerpt"><%= truncate(@todays_entry.last.what_went_well, length: 65) %></p>
          <div class="index-entry__mood-shift">
            <figure class="feeling feeling--<%= mood(@todays_entry.last.how_do_you_feel) %>">
              <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(@todays_entry.last.how_do_you_feel) %>.png" alt="Feeling <%= mood(@todays_entry.last.how_do_you_feel) %>" class="mood__emoticon">
              <figcaption class="mood"><%= mood(@todays_entry.last.how_do_you_feel) %></figcaption>
            </figure>
            <span class="index-entry__mood-shift__arrow--right">&#10157;</span>
            <figure class="feeling feeling--<%= mood(@todays_entry.last.how_do_you_feel_now) %>">
              <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(@todays_entry.last.how_do_you_feel_now) %>.png" alt="Feeling <%= mood(@todays_entry.last.how_do_you_feel_now) %>" class="mood__emoticon">
              <figcaption class="mood"><%= mood(@todays_entry.last.how_do_you_feel_now) %></figcaption>
            </figure>
          </div>
        </section>
      </div>
    <% else %>
        <!-- PROMPT TODAYS ENTRY -->
      <div class=" large-6 columns">
      <section class="index-entry index-entry--today">
        <header>
          <h1 class="title index-entry__title">Enter something for today!</h1>
        </header>
      </div>
    <% end %>

  </div>
</section>


<%= link_to 'New Entry', root_path %>
</section>
