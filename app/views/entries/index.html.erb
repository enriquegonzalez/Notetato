<h1>Listing entries</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Mood Before</th>
      <th>Mood After</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= link_to entry.date.strftime("%m/%d/%Y"), entry %></td>
        <td>
          <figure class="feeling--<%= mood(entry.how_do_you_feel) %>">
            <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(entry.how_do_you_feel) %>.png" alt="Feeling <%= mood(entry.how_do_you_feel) %>" class="mood__emoticon">
            <figcaption class="mood"><%= mood(entry.how_do_you_feel) %></figcaption>
          </figure>
        </td>
        <td>
          <figure class="feeling--<%= mood(entry.how_do_you_feel_now) %>">
            <img src="https://s3-us-west-2.amazonaws.com/notetato-static-media/emoticons/notetato-<%= mood(entry.how_do_you_feel_now) %>.png" alt="Feeling <%= mood(entry.how_do_you_feel_now) %>" class="mood__emoticon">
            <figcaption class="mood"><%= mood(entry.how_do_you_feel_now) %></figcaption>
          </figure>
        </td>
        <% if entry.date.strftime("%Y-%m-%d") == Date.today.to_s %>
          <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

